<h1>Genres</h1>

<% if @genres.length > 0 %>
  <div class="long-list-wrapper">
    <ol class="long-list">
      <% @genres.each do |genre| %>
        <li class="long-list__el">
          <%= 
            link_to genre.name, genre_path(genre)
          %>
        </li>
      <% end %>
    </ol>
    <% if @page_count > 1 %>
      <div class="page-list-wrapper">
        <div class="page-list-title">Pages</div>
        <ol class="page-list">
          <% @page_count.times do |p| %>
            <li class="page-list__el">
              <% if @page != p %>
                <%= link_to p + 1, genres_path(page: p) %>
              <% else %>
                <b><%= p + 1 %></b>
              <% end %>
            </li>
          <% end %>
        </ol>
      </div>
    <% end %>
  </div>
<% else %>
  <p class="empty-state">There are no genres.</p>
<% end %>

<%= link_to '+', new_genre_path, class: 'create-button' %>