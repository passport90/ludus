<p>
  <%= image_tag("/images/games/#{@image_folder}/#{@game.id}.jpg", class: 'game') %>
</p>
<header>
  <h1 class="game_header"><%= @game.title %></h1>
  <p class="game_header">
    <%= image_tag("/images/platform_logos/#{@game.platform.id}.jpg", class: 'platform_logo') %>
    <%= link_to @game.platform.name, platform_path(@game.platform) %>
  </p>
</header>

<%= tag.div (('N/A' unless @game.score) || @game.score), class: "score #{@score_color}" %>

<% if @badges.length > 0 %>
  <p class="badges">
    <% @badges.each do |badge| %>
      <span class="symbol"><%= badge.symbol %></span>
      <%= link_to badge.name, badge_path(badge) %><br />
    <% end %>
  </p>
<% end %>

<table>
  <tbody>
    <tr>
      <th scope="row">Release Date</th>
      <td>
        <%= @game.release_date.strftime('%A, %-d %B %Y') %>
        <%= '?' unless @game.is_date_confirmed %>
       </td>
    </tr>
    <tr>
      <th scope="row">Publisher</th>
      <td>
        <%= link_to @game.publisher.name, publisher_path(@game.publisher) %>
      </td>
    </tr>
    <tr>
      <th scope="row">Genre</th>
      <td><%= link_to @game.genre.name, genre_path(@game.genre) %></td>
    </tr>
    <% if @game.franchise %>
      <tr>
        <th scope="row">Franchise</th>
        <td><%= link_to @game.franchise.name, franchise_path(@game.franchise) %></td>
      </tr>
    <% end %>
    <tr>
      <th scope="row">ESRB Rating</th>
      <td><%= @game.esrb_rating.name %></td>
    </tr>
  </tbody>
</table>

<% if @game.remarks %>
<p class="remarks">
  <%= @game.remarks %>
</p>
<% end %>

<% if @game.video_link %>
<p>
  <%= link_to 'Gameplay Video', @game.video_link, rel: 'external', target: '_blank' %>
  <span class="symbol">🎞️↗️</span>
</p>
<% end %>

<p>
  <%= link_to "Games This Week", games_path(week: @game.release_date.cweek, year: @game.release_date.cwyear) %> <br />
  <%= link_to "All Games", years_path %><br />
  <%= link_to "Home", root_path %><br />
  <%= link_to "Search", search_path %>
</p>

<p>
  <%= link_to "Update", edit_game_path(@game) %><br />
  <%= link_to "Award Badge", new_badges_game_path('game[id]': @game.id) %>
</p>
