<p>
  <%= image_tag("/images/games/#{@game.id}.jpg", class: 'game') %>
</p>
<header>
  <h1 class="game_header"><%= @game.title %></h1>
  <p class="game_header"><%= @game.platform.name %></p>
</header>
<%= tag.div (('N/A' unless @game.score) || @game.score), class: "score #{@score_color}" %>
<table>
  <tbody>
    <tr>
      <th scope="row">Release Date</th>
      <td><%= @game.release_date.strftime('%A, %-d %B %Y') %></td>
    </tr>
    <tr>
      <th scope="row">Publisher</th>
      <td><%= @game.publisher.name %></td>
    </tr>
    <tr>
      <th scope="row">Genre</th>
      <td><%= @game.genre.name %></td>
    </tr>
    <tr>
      <th scope="row">ESRB Rating</th>
      <td><%= @game.esrb_rating.name %></td>
    </tr>
  </tbody>
</table>

<p>
  <%= link_to "Back to Games This Week", games_path(week: @game.release_date.strftime('%G%V')) %> <br />
  <%= link_to "Back to All Games", games_path %>
</p>
